{
  "name": "@omgoods/contracts",
  "private": true,
  "license": "NONE",
  "scripts": {
    "start": "hardhat node",
    "linter": "solhint \"contracts/**/*.sol\"",
    "format": "prettier --write \"{contracts,examples,ignition,src,test}/**/*.{ts,sol}\"",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "export": "hardhat export-abi",
    "test": "hardhat test",
    "hardhat": "hardhat",
    "example:act-as-dao": "hardhat run ./examples/act-as-dao.ts",
    "example:act-as-fungible-token": "hardhat run ./examples/act-as-fungible-token.ts",
    "example:act-as-non-fungible-token": "hardhat run ./examples/act-as-non-fungible-token.ts",
    "example:act-as-smart-wallet": "hardhat run ./examples/act-as-smart-wallet.ts"
  },
  "dependencies": {
    "@account-abstraction/contracts": "0.7.0",
    "@openzeppelin/contracts": "5.2.0"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@nomicfoundation/hardhat-ignition-viem": "0.15.9",
    "@nomicfoundation/hardhat-network-helpers": "1.0.12",
    "@nomicfoundation/hardhat-verify": "2.0.12",
    "@nomicfoundation/hardhat-viem": "2.0.6",
    "@types/chai": "4.3.20",
    "@types/chai-as-promised": "7.1.8",
    "@types/mocha": "9.1.1",
    "@types/node": "22.10.10",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.2",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "15.14.0",
    "hardhat": "2.22.18",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-chai-matchers-viem": "2.0.8",
    "hardhat-gas-reporter": "2.0.0",
    "prettier": "3.4.2",
    "prettier-plugin-solidity": "1.4.2",
    "solhint": "5.0.5",
    "solidity-coverage": "0.8.14",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0",
    "viem": "2.22.17"
  }
